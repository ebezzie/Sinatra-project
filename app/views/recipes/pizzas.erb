<% if @search %>
	<h3>Showing matching pizza '<%= @word %>':</h3>
    <% else %>
    <h3>Pizza Palace, the place for pizza &#127829;!</h3>
    <p>Welcome, <%= @user.username %>! Click on any of the pizzas below to view the recipes.<br>
<% end %>

<% @pizzas.each do |pizza| %>
<p><a href="/pizzas/<%= pizza.id %>"><%= pizza.name %></a> by <em>
<a href="/users/<%= pizza.user.username %>"><%= pizza.user.username %></a></em></p>
<% end %><br><br>

<form action='/pizzas/search' method="post">
    <p><label for="search">Enter a pizza name to search for a recipe:</label>
    <input type="text" id="search" name="search">
    <button type="submit" alt="Submit">Find the pizza &#127829;</button></p>
</form>
<br><br>
<p class="center"><a href="/pizzas/new">Create new pizza recipe</a> &#127829;</p>
<p class="center">Go back to <a href='/'>Main Page</a></p>
